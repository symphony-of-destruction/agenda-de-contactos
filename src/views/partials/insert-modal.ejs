<div  class="modal fade"  id="exampleModalToggle"  aria-hidden="true"  aria-labelledby="exampleModalToggleLabel"  tabindex="-1">

  <div class="modal-dialog modal-dialog-centered">
    
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalToggleLabel">Contact Form</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <!--Body Modal-->
      <div class="modal-body">
          
         <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">
              First Name
            </label>
            <input type="text" class="form-control" id="tboxfirstname" placeholder="" name="firstname"/>
          </div>

          <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">
              Last Name
            </label>
            <input
              type="text"
              class="form-control"
              id="tboxlastname"
              placeholder="name@example.com"
              name="lastname"
            />
          </div>

          <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label"
              >Email address</label
            >
            <input
              type="email"
              class="form-control"
              id="tboxemail"
              placeholder="name@example.com"
              name="email"
            />
          </div>

          <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label"
              >Mobile #</label>
            <input
              type="text"
              class="form-control"
              id="tboxmobile"
              placeholder="809-xxx-xxxx"
              name="mobile"
            />
            <input type="hidden" id="tboxId" value="-1"> <!-- New element to confirm -->
          </div>

      </div>

      <!-- Buttons -->
      <div class="modal-footer">
        <button
          class="btn btn-warning text-white"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          Cancel
        </button>
        <button
          class="btn btn-success"
          data-bs-toggle="modal"
          data-bs-dismiss="modal"
          aria-label="Close"
          id="btn-save"
        >
          Save
        </button>

        <button 
          class="btn btn-warning text-white"
          data-bs-target="#exampleModalToggle2"
          data-bs-toggle="modal"
          data-bs-dismiss="modal"
          id="btn-update-modal"
        >
          â†º Update
        </button>

      </div>

    </div>

  </div>

</div>

